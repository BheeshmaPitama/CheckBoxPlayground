<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.anubhav.checkboxplayground.checkBox.AstroCheckBox
        android:id="@+id/astroCheckBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:bgColorChecked="@color/primary_light_color"
        app:bgColorUnchecked="@color/white"
        app:borderColorChecked="@color/app_primary_color"
        app:borderColorUnchecked="@color/suggestion_color"
        app:borderWidth="2dp"
        app:curveRadius="8dp"
        app:tickColor="@color/app_primary_color"
        app:tickWidth="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>